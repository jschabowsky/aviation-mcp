{
  "name": "aviation-weather-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for aviation weather and flight planning",
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "aviation-weather-api:build": "npm run aviation-weather-api:fetch && npm run aviation-weather-api:generate && cd packages/aviation-weather-api && npm run build",
    "aviation-weather-api:clean": "rm -Rf aviation-weather-api/src && rm -Rf aviation-weather-api/dist",
    "aviation-weather-api:fetch": "curl -o packages/aviation-weather-api/swagger.yaml https://aviationweather.gov/data/schema/openapi.yaml",
    "aviation-weather-api:generate": "cd packages/aviation-weather-api && openapi-generator-cli generate --skip-validate-spec -i ./swagger.yaml -g typescript-fetch -o ./ -c generator.yaml",
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "dev:debug": "tsx --inspect --watch src/index.ts",
    "inspect": "npm run build  && npx @modelcontextprotocol/inspector",
    "start": "node dist/index.js",
    "update": "npx npm-check-updates --interactive --format group"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "aviation-weather-api": "*",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.11.0",
    "@openapitools/openapi-generator-cli": "^2.18.4",
    "@types/express": "^5.0.5",
    "@types/node": "^22.19.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
